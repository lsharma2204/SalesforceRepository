<apex:page >
    <apex:sectionHeader title="Student" subtitle="New Student" help="/apex/StudentHelp"/>
    <apex:form >
    	<apex:pageBlock id="pb1" title="Student Registration" rendered="true">
        	<apex:pageBlockButtons location="top" dir="LTR">
            	<apex:commandButton value="Save"/>
                <apex:commandButton value="Delete"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection id="pbs1" title="Basic Info" collapsible="false" showHeader="true" columns="1">
            	<apex:pageBlockSectionItem >
                    <apex:outputLabel value="LastName :" /> 
                    <apex:inputText />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="FirstName :" /> 
                    <apex:inputText />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Phone :" /> 
                    <apex:inputText />
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>